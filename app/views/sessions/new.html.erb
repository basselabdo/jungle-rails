<section class="orders-show">

  <header class="page-header">
  <h1>Login</h1>
  </header>

 <%= form_tag '/login' do %>
  <div class="form-group">
  <label >Email</label>
   <%= text_field_tag :email %>
   </div>
   <div class="form-group">
    <label >Password</label>
   <%= password_field_tag :password %>
   </div>
  <%= submit_tag "Submit"  %>

<% end %>
</section>


